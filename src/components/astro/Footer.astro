---
import { EnvelopeIcon, GlobeAltIcon } from '@iksaku/heroicons-astro/24/outline';
import { UserGroupIcon } from '@iksaku/heroicons-astro/24/solid';


const logoSrc = "/assets/ico/logo.png";
---

<footer class="bg-gray-900 text-white py-8">
  <div class="container mx-auto px-4 flex flex-col md:flex-row items-center md:justify-between">
    <div class="flex items-center mb-6 md:mb-0">
      <img src={logoSrc} alt="Logo" class="h-10 mr-3" />
      <span class="text-xl font-semibold">SWOTBee</span>
    </div>
    <nav class="flex space-x-4 mb-6 md:mb-0">
      <a href="/" class="hover:text-gray-400">Home</a>
      <a href="/about" class="hover:text-gray-400">About</a>
      <a href="/services" class="hover:text-gray-400">Services</a>
      <a href="/contact" class="hover:text-gray-400">Contact</a>
    </nav>
    <div class="flex space-x-4">
      <a href="mailto:info@yourcompany.com" aria-label="Email" class="hover:text-gray-400 size-6 p-0.5">
        <EnvelopeIcon class="h-6 w-6 size-6 p-0.5" />
      </a>
      <a href="https://yourcompany.com" target="_blank" rel="noopener noreferrer" aria-label="Website" class="hover:text-gray-400">
        <GlobeAltIcon class="h-6 w-6 size-6" />
        
      </a>
      <a href="/about" aria-label="Team" class="hover:text-gray-400 size-6 p-0.5">
        <UserGroupIcon class="h-6 w-6" />
      </a>
      <!-- Add more icons as needed -->
    </div>
  </div>
  <div id="cookie-consent" class="fixed bottom-0 left-0 w-full bg-gray-800 text-white p-4 flex justify-between items-center z-50">
    <span>We use cookies to improve your experience. By using our site, you agree to our <a href="/privacy" class="underline">Privacy Policy</a>.</span>
    <button onclick="document.getElementById('cookie-consent').style.display='none'" class="bg-gray-700 px-4 py-2 rounded ml-4">Got it</button>
  </div>
</footer>
