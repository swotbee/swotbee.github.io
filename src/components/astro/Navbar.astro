---
import Button from './Button.astro';
const navLinks = [
    { href: "/", label: "Home" },
    { href: "/about", label: "About" },
    { href: "/testimonials", label: "Testimonials" },
    { href: "/blog", label: "Blog" },
    { href: "/contact", label: "Contact" },
    { href: "/services", label: "Services" },
    { href: "/industries", label: "Industries" }
];
const logoSrc = "/assets/ico/logo.png";
---
<section
      id="navbar"
      aria-label="Main Navigation"
      class="relative z-[999] flex min-h-16 w-full items-center  bg-highlight-25 px-[5%] md:min-h-18"
    >
<nav class="bg-highlight-25 text-red-900 px-4 py-3">
        <div class="absolute hidden h-screen overflow-auto  bg-highlight-25 px-[5%] pt-4 pb-24 md:pb-0 lg:static lg:ml-6 lg:flex lg:h-auto lg:flex-1 lg:items-center lg:justify-between lg:border-none lg:bg-none lg:px-0 lg:pt-0">
                  <a href="/">
          <img
            src={logoSrc}
            alt="Logo"
            class="w-auto h-8 md:h-10 lg:h-12"
          />

        </a>
          <div class="flex flex-col items-center lg:flex-row">
                  {navLinks.map(link => (
                <a
              href="/"
              class="relative block w-auto py-3 text-md lg:inline-block lg:px-4 lg:py-6 lg:text-base"
            >
              {link.label}
            </a>
      ))}
            <!-- <a
              href="/"
              class="relative block w-auto py-3 text-md lg:inline-block lg:px-4 lg:py-6 lg:text-base"
            >
              Home
            </a>
            <a
              href="/services"
              class="relative block w-auto py-3 text-md lg:inline-block lg:px-4 lg:py-6 lg:text-base"
            >
              Services
            </a>
            <a
              href="/testimonials"
              class="relative block w-auto py-3 text-md lg:inline-block lg:px-4 lg:py-6 lg:text-base"
            >
              Testimonials
            </a> -->
          </div>
          <div class="flex items-center gap-4">

            <button type="button" class="text-white bg-highlight-500 hover:bg-highlight-600 focus:ring-4 focus:outline-none focus:ring-highlight-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-highlight-600 dark:hover:bg-highlight-700 dark:focus:ring-highlight-800">
              Talk to an Expert
              <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
              <path stroke="currentColor" strokeLinecap="round" strokeLineJoin="round" strokeLineWidth="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
            </button>

          </div>
        </div>
</nav>
</section>